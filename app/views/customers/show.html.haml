- title "Customer"

%p
  %strong 社名:
  =h @customer.name
%p
  %strong 担当者:
  =h @customer.account
%p
  %strong TEL:
  =h @customer.tel
%p
  %strong Mail:
  =h @customer.mail
%p
  %strong URL:
  = link_to h(@customer.url), @customer.url
%p
  %strong Text:
  .text{:style => "border: 1px solid silver; margin: 10px 20px; padding: 0 10px;"}
    = simple_format h @customer.text

%p
  = link_to "編集", edit_customer_path(:id => @customer.id)

%p
  %strong youRoomへ:
  = link_to h(entry_url(@customer, session[:group])), entry_url(@customer, session[:group])

%iframe{:src => entry_url(@customer, session[:group]), :style => "width:100%;height:600px;"}

%p
  = link_to "View All", customers_path
